<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
  android:elevation="10dp"
    android:layout_margin="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/featured_recycler_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/mcdonalds"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/featured_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="McDonald's"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
        <RatingBar
            android:id="@+id/featured_recycler_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
        <TextView
            android:id="@+id/featured_recycler_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mnasbdas ajsdkas ajsdba absdj iasjd a siaj aisjd a a a aikjnas dai sjf nsd"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>